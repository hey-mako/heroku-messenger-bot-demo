{
  "buildpacks": [
    {
      "url": "heroku/python"
    },
    {
      "url": "heroku/nodejs"
    },
    {
      "url": "https://github.com/mako-ai/heroku-buildpack-messenger-bot"
    }
  ],
  "env": {
    "ACCESS_TOKEN": {
      "description": "The page access token used by the bot.",
      "required": true
    },
    "FACEBOOK_APP_ID": {
      "required": true
    },
    "FACEBOOK_APP_SECRET": {
      "required": true
    },
    "HEROKU_API_KEY": {
      "required": true
    },
    "HEROKU_APP_NAME": {
      "description": "The value of this variable MUST be identical to the value of your application name.",
      "required": true
    },
    "VERIFY_TOKEN": {
      "generator": "secret"
    }
  },
  "name": "mako",
  "repository": "https://github.com/mako-ai/heroku-messenger-bot-demo",
  "scripts": {
    "postdeploy": "bin/postdeploy.sh",
    "pr-predestroy": "bin/pr-predestroy.sh"
  }
}
